{
  "name": "droplt-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "bootstrap": "run-s runtime theme codegen prisma",
    "runtime": "NODE_ENV=development runtime-env-cra --config-name=./public/runtime-env.js --env-file .env.local",
    "theme": "chakra-cli tokens src/theme/index.ts",
    "codegen": "graphql-codegen",
    "postinstall": "husky install",
    "prisma": "prisma migrate deploy && prisma generate",
    "build": "react-scripts build && precompress build && tsc --project server/tsconfig.json",
    "eject": "react-scripts eject",
    "server": "ts-node-dev --respawn --clear --transpile-only --rs --project server/tsconfig.json server/index.ts",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "plugins": [
      "simple-import-sort"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "eslintIgnore": [
    "public/runtime-env.js"
  ],
  "dependencies": {
    "@apollo/client": "^3.6.1",
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.8",
    "@ctrl/shared-torrent": "^4.1.0",
    "@ctrl/transmission": "^3.0.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/roboto": "^4.5.5",
    "@fontsource/roboto-mono": "^4.5.7",
    "@prisma/client": "3.12.0",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "deep-equal": "^2.0.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "firebase": "^9.7.0",
    "firebase-admin": "^10.1.0",
    "framer-motion": "^6.3.3",
    "fuse.js": "^6.5.3",
    "graphql": "~15.3.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.17.0",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^5.0.2",
    "jwt-decode": "^3.1.2",
    "multer": "^1.4.4",
    "pretty-bytes": "^6.0.0",
    "ramda": "^0.28.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.30.0",
    "react-icons": "^4.3.1",
    "react-localization": "^1.0.19",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-table": "^7.7.0",
    "reflect-metadata": "^0.1.13",
    "runtime-env-cra": "^0.2.4",
    "subscriptions-transport-ws": "^0.11.0",
    "toad-scheduler": "^1.6.0",
    "type-graphql": "^1.1.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.9.0",
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/near-operation-file-preset": "^2.2.9",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "3.2.11",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/dotenv-flow": "^3.2.0",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "^27.4.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.33",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-table": "^7.7.11",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "precompress": "^7.0.1",
    "prettier": "^2.6.2",
    "prisma": "3.12.0",
    "sort-package-json": "^1.57.0",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.4.0",
    "typegraphql-prisma": "0.20.1",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.0",
  "graphql": {
    "schema": "public/schema.graphql",
    "documents": "src/**/*.graphql"
  },
  "proxy": "http://localhost:4000"
}
